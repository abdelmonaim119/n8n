        "operation": "lookup",
        "sheetId": "1lYI7nzdRwOsjfz8AyPGHqP5u-aQV142DeNBuMFbdTL8",
        "range": "ProcessedCalls!A:C",
        "keyRow": 0,
        "dataStartRow": 1,
        "lookupColumn": "call_id",
        "lookupValue": "={{ $json.call_id }}",
        "options": {
