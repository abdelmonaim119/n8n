    {
      "parameters": {
        "jsCode": "try {\\n  const serp = $json || {};\\n  if (serp.error) throw new Error('SERP API error: ' + (serp.error.message || JSON.stringify(serp.error)));\\n  const organic = Array.isArray(serp.organic_results) ? serp.organic_results : [];\\n  if (organic.length === 0) throw new Error('No SERP results found.');\\n\\n  // Reduce payload passed into the Researcher agent.\\n  const results = organic.slice(0, 20).map(r => ({\\n    position: r.position,\\n    title: r.title || 'Untitled',\\n    link: r.link || '',\\n    snippet: r.snippet || '',\\n    displayed_link: r.displayed_link || '',\\n  })).filter(r => r.link && r.link.length > 0);\\n\\n  if (results.length === 0) throw new Error('All SERP results were invalid.');\\n\\n  return [{\\n    json: {\\n      ...$json,\\n      serpResults: results,\\n      __serp_ok: true,\\n    }\\n  }];\\n} catch (e) {\\n  return [{\\n    json: {\\n      ...$json,\\n      __error: e.message,\\n      __serp_ok: false,\\n    }\\n  }];\\n}"
      },
