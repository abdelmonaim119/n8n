    {
      "parameters": {
        "jsCode": "try {\\n  const sourceUrl = $json.sourceUrl || '';\\n  const sourceTitle = $json.sourceTitle || '';\\n\\n  if (!sourceUrl) throw new Error('Missing sourceUrl.');\\n\\n  let text = '';\\n\\n  // Firecrawl response commonly includes markdown in `data.markdown` or `markdown`.\\n  // Direct fetch returns HTML in `body` / raw.\\n  if ($json.data?.markdown) text = $json.data.markdown;\\n  else if ($json.markdown) text = $json.markdown;\\n  else if (typeof $json.body === 'string') text = $json.body;\\n  else if (typeof $json === 'string') text = $json;\\n\\n  text = String(text || '')\\n    .replace(/<script[\\\\s\\\\S]*?<\\\\/script>/gi, ' ')\\n    .replace(/<style[\\\\s\\\\S]*?<\\\\/style>/gi, ' ')\\n    .replace(/<[^>]+>/g, ' ')\\n    .replace(/\\\\s+/g, ' ')\\n    .trim();\\n\\n  // Hard cap to avoid excessive storage/token usage.\\n  const maxChars = Number($env.SCRAPED_TEXT_MAX_CHARS || 20000);\\n  if (text.length > maxChars) text = text.slice(0, maxChars);\\n\\n  const ok = text && text.length > 50;  // Require minimum text length\\n\\n  return [{\\n    json: {\\n      ...$json,\\n      scrapeOk: ok,\\n      text: ok ? text : '',\\n      __scrape_error: ok ? null : 'Text too short or empty',\\n      metadata: {\\n        url: sourceUrl,\\n        title: sourceTitle,\\n        fetchedAt: new Date().toISOString(),\\n        textLength: text.length,\\n      },\\n    }\\n  }];\\n} catch (e) {\\n  return [{\\n    json: {\\n      ...$json,\\n      scrapeOk: false,\\n      text: '',\\n      __scrape_error: e.message,\\n      metadata: { error: e.message },\\n    }\\n  }];\\n}"
      },
